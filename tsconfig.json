{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "pretty": true,
    "baseUrl": "./",
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "paths": {
      "@src/*": ["src/*"],
    }
  },
  "include": ["app/**/*", "./", "config"],
  "exclude": ["node_modules", "dist"]
}
